fi

${sh5} "${TARGET_DIGESTS_dir}"/* | grep -v '"${TARGET_DIGESTS_file}".4' | grep -v 'cf83e' | grep -v 'SAM' | head -n 10 > "${TARGET_DIGESTS_file}".4

