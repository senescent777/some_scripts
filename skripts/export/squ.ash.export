	echo -n "-d :Destroys contents of "
	echo "$squash0/ and $tmpdir/d.rem "

	echo -n "-c <target_file> [optional_params_4_mksquashfs?] : Compresses "
	echo "$squash_dir to <target_file> with optional_params"

	echo -n "-r :runs chRoot in "
	echo "$squash_dir "
